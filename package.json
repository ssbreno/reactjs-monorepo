{
  "name": "monorepo",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint:fix": "yarn workspaces run lint:fix",
    "lint": "yarn workspaces run lint",
    "reset": "yarn workspaces run reset && rm -rf node_modules && rm -rf yarn.lock",
    "build": "yarn workspaces run build",
    "build:ui": "yarn workspace common-ui build",
    "test": "yarn workspaces run test",
    "test:coverage": "yarn workspaces run test:coverage",
    "dev": "yarn workspaces run dev",
    "clean": "yarn workspaces run clean",
    "talent:dev": "cd apps/talent && yarn dev",
    "auth:dev": "cd apps/auth && yarn dev",
    "main:dev": "cd apps/main && yarn dev",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "engines": {
    "node": ">=v18.9.0"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "reflect-metadata": "^0.2.1",
    "zod": "^3.22.4",
    "git-cz": "^4.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@faker-js/faker": "^8.4.1",
    "@monorepo/eslint": "1.0.0",
    "@monorepo/testing": "1.0.0",
    "@types/node": "^20.11.16",
    "chalk": "^5.3.0",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.3.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write .",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
